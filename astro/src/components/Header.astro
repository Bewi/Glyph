---
import { getLangFromUrl } from "@i18n/utils";
import "@styles/header.scss";
import LanguageSelector from "./LanguageSelector.astro";
const lang = getLangFromUrl(Astro.url);
---

<header class="header">
  <nav class="navbar" aria-labelledby="mainmenu">
    <ul class="navbar__list">
      <li>
        <a class="navbar__link" href={`${lang}`}>Home</a>
      </li>
      <li>
        <a class="navbar__link" href={`${lang}/content`}>Contents</a>
      </li>
    </ul>
  </nav>

  <LanguageSelector />
</header>
